{% extends 'back/base.html.twig' %}


{% block body %}
    <h2>Liste des Cours</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.name }}</td>
                <td>
                    <a href="{{ path('app_back_course_show', {'id': course.id}) }}">Voir</a>
                    <a href="{{ path('app_back_course_edit', {'id': course.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Ressource non trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_course_new') }}">Nouveau</a>
{% endblock %}
