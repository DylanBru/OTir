{% extends 'back/base.html.twig' %}

{% block body %}
    <h2>Course</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ course.day }}</td>
            </tr>
            <tr>
                <th>Hour</th>
                <td>{{ course.hour ? course.hour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ course.createdAt ? course.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ course.updatedAt ? course.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_course_index') }}">back to list</a>

    <a href="{{ path('app_back_course_edit', {'id': course.id}) }}">edit</a>

    {{ include('back/course/_delete_form.html.twig') }}
{% endblock %}
