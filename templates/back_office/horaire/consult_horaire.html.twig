<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Horaire et Tarifs</title>
    
    <!-- Lien vers le fichier CSS de Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Styles personnalisés -->
    <style>
        body {
            background-color: #137C8B;  /* Vert */
        }

        .section-personnalisee {
            background-color: #B8CBD0;  /* Gris  */
        }
        .footer-buttons {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }
    </style>

</head>
<body>

   
        <!-- Section Horaires -->
        <section class="p-5 section-personnalisee rounded shadow"> 
            <h2 class="text-primary mb-4">vous consultez l horaire du cours {{ course.name }}</h2>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Jour</th>
                        <th>Nom du cours</th>
                        <th>Heures</th>
                    </tr>
                </thead>
                <tbody>
                    
                        <tr>
                            <td>{{ course.day }}</td>
                            <td>{{ course.name }}</td>
                            <td>{{ course.hour|date('H:i') }}</td>
                            <td><div class="float-right">
                            
                            <button class="btn btn-warning btn-sm mr-2">Modifier</button>
                            <button class="btn btn-danger btn-sm">Supprimer</button>
                            </td>
                        </div>
                        </tr>
                    
                </tbody>
            </table>
        </section>
         <!-- Boutons en bas -->
        <div class="footer-buttons">
            <a href="{{ path('route_retour') }}" class="btn btn-secondary">Retour</a>
            
            
            
        </div>
    </div>

    <!-- Scripts Bootstrap (pour ajouter les fonctionnalités JS de Bootstrap si besoin) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
</body>
</html>
