{% extends 'base.html.twig' %}

{% block title %}Tarif!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tarifs</h1>

    <table>
        <thead>
            <tr>
                <th>Min Age</th>
                <th>Max Age</th>
                <th>Amount</th>
                <th>Gear amount</th>
            </tr>
        </thead>
        <tbody>
            {% for tarif in tarifs %}
                <tr>
                    <td>{{ tarif.ageMin }}</td>
                    <td>{{ tarif.ageMax }}</td>
                    <td>{{ tarif.amount }}</td>
                    <td>{{ tarif.gearAmount }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
