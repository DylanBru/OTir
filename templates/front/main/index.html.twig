{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    {% dump(pictures) %}
    <section class="slider">
        <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner">
                {% set isFirstPicture = true %}
                {% for picture in pictures %}
                    <div class="carousel-item {{ isFirstPicture ? 'active' : '' }}">
                        <img class="img-fluid" src="{{ asset('images/' ~ picture) }}" alt="image du club">
                    </div>
                    {% set isFirstPicture = false %}
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>

    <section class="presentation">
        <h2>Notre Club</h2>
        <p>
            Lorem ipsum dolor sit amet consectetur, adipisicing elit. Magnam doloribus adipisci dolor, natus nostrum sit ab omnis atque minus odit, facere consectetur possimus exercitationem. Consectetur reprehenderit numquam sit temporibus ratione.
        </p>
    </section>
</div>
{% endblock %}

{% block javascripts %} <script src="{{ asset('js/script.js') }}"></script> {% endblock %}